<h3 class="title">Public gists</h3>

<div class="gists-list">
  <%= for gist <- @gists do %>
    <div class="gist-item">
      <div class="gist-name">
        <%= link gist.name, to: public_path(@conn, :show, gist.id) %>
      </div>
      <div class="gist-code-short">
        <textarea class="readonly"><%= gist.code %></textarea>
      </div>
    </div>
  <% end %>
</div>
